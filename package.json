{
  "name": "data-provider-website",
  "description": "Data Provider documentation website",
  "private": true,
  "author": "Javier Brea",
  "license": "MIT",
  "repository": "https://github.com/data-provider/website",
  "scripts": {
    "lint": "eslint website",
    "lint-staged": "lint-staged",
    "start": "cd website && npm run start"
  },
  "devDependencies": {
    "babel-eslint": "10.1.0",
    "eslint": "7.15.0",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-prettier": "3.2.0",
    "eslint-plugin-react": "7.21.5",
    "husky": "4.3.5",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1"
  },
  "lint-staged": {
    "website/pages/**/*.js": "eslint",
    "website/core/**/*.js": "eslint",
    "website/i18n/**/*.js": "eslint",
    "website/static/**/*.js": "eslint",
    "website/*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  }
}
